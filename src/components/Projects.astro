---
import JesseButton from "./ui/JesseButton.astro";
import { projects } from "../data/projects";
---

<section id="projects" class="py-section relative exclusive-section">
  <div class="max-w-content mx-auto px-4">
    <h2
      class="text-4xl font-bold text-electric-blue text-center mb-16 opacity-0 translate-y-8 transition-all duration-700 will-change-transform"
      data-animate-on-scroll
    >
      Winning Hands
    </h2>

    <div class="space-y-24">
      {projects.map((project, index) => (
        <div
          class="group opacity-0 translate-y-8 transition-all duration-700 will-change-transform"
          data-animate-on-scroll
        >
          <div class="grid md:grid-cols-2 gap-12 items-center">
            <!-- Project Image -->
            <div class="relative order-2 md:order-1">
              <div class="aspect-video rounded-2xl overflow-hidden">
                <img
                  src={project.image}
                  alt={project.name}
                  class="w-full h-full object-cover"
                />
              </div>
              <!-- Poker Hand Indicator -->
              <div class="absolute -top-4 -left-4 bg-slate-900/80 rounded-lg px-4 py-2 border border-blue-700">
                <span class="text-electric-blue font-semibold">{project.hand}</span>
              </div>
            </div>

            <!-- Project Details -->
            <div class="space-y-6 order-1 md:order-2">
              <h3 class="text-3xl font-bold text-off-white">{project.name}</h3>
              <p class="text-lg text-light-gray">{project.description}</p>

              <!-- Technologies -->
              <div class="space-y-4">
                <h4 class="text-xl font-semibold text-electric-blue">Tech Stack</h4>
                <div class="flex flex-wrap gap-3">
                  {project.technologies.map((tech) => (
                    <span class="px-4 py-2 bg-slate-900/80 rounded-full text-sm text-off-white border border-blue-700/20">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>

              <!-- Impact & Complexity -->
              <div class="grid grid-cols-2 gap-6">
                <div class="bg-slate-900/80 rounded-lg p-4 backdrop-blur-sm border border-blue-700/20">
                  <h4 class="text-sm text-muted mb-1">Impact</h4>
                  <p class="text-xl font-semibold text-electric-blue">{project.impact}</p>
                </div>
                <div class="bg-slate-900/80 rounded-lg p-4 backdrop-blur-sm border border-blue-700/20">
                  <h4 class="text-sm text-muted mb-1">Complexity</h4>
                  <p class="text-xl font-semibold text-electric-blue">{project.complexity}</p>
                </div>
              </div>

              <!-- View Project Button -->
              {project.externalLink && project.externalLink !== 'null' ? (
                <JesseButton
                  href={project.externalLink}
                  target="_blank"
                  rel="noopener noreferrer"
                  variant="text"
                  size="large"
                  showText={true}
                >
                  <span slot="icon">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </span>
                  View Project
                </JesseButton>
              ) : (
                <JesseButton
                  href={`/projects/${project.slug}`}
                  variant="text"
                  size="large"
                  showText={true}
                >
                  <span slot="icon">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12H9m6 0a6 6 0 11-12 0 6 6 0 0112 0z" />
                    </svg>
                  </span>
                  More Details
                </JesseButton>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .group:hover .group-hover\:translate-x-2 {
    transform: translateX(0.5rem);
  }
</style>

<script is:inline>
document.addEventListener('DOMContentLoaded', () => {
  const elements = document.querySelectorAll('[data-animate-on-scroll]');
  const observer = new window.IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('opacity-100', 'translate-y-0');
        entry.target.classList.remove('opacity-0', 'translate-y-8');
        observer.unobserve(entry.target);
      }
    });
  }, { threshold: 0.15 });
  elements.forEach(el => observer.observe(el));
});
</script> 