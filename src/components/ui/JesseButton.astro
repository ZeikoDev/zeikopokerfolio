---
const { showText = false, size = "default", variant = "icon" } = Astro.props;
---

<button class={`jesse-btn ${variant} ${size}`}>
    <slot name='icon' />
    {
        showText ? (
            <span class='jesse-btn-text'>
                <slot />
            </span>
        ) : null
    }
</button>

<style>
    .jesse-btn {
        position: relative;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(145deg, #0f172a 70%, #1e293b 100%);
        color: #3b82f6;
        font-family: "Inter", sans-serif;
        font-weight: 700;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        border: 2px solid #1e293b;
        border-radius: 1.1rem;
        box-shadow:
            0 12px 0 0 #1e293b,
            0 4px 32px 0 #0f172a,
            0 0.5px 0 0 #3b82f6 inset;
        overflow: hidden;
        transition:
            background 0.2s,
            color 0.2s,
            transform 0.2s,
            box-shadow 0.2s;
    }

    /* Icon button (default) */
    .jesse-btn.icon {
        width: 72px;
        height: 72px;
        min-width: 72px;
        padding: 0;
        font-size: 1.25rem;
    }

    /* Text button */
    .jesse-btn.text {
        width: auto;
        min-width: 160px;
        padding: 0.75rem 2rem;
        font-size: 1rem;
    }

    /* Sizes */
    .jesse-btn.small {
        font-size: 0.875rem;
        padding: 0.5rem 1.5rem;
        border-radius: 0.8rem;
        box-shadow:
            0 8px 0 0 #1e293b,
            0 3px 24px 0 #0f172a,
            0 0.5px 0 0 #3b82f6 inset;
    }

    .jesse-btn.large {
        font-size: 1.25rem;
        padding: 1rem 2.5rem;
        border-radius: 1.4rem;
        box-shadow:
            0 16px 0 0 #1e293b,
            0 6px 40px 0 #0f172a,
            0 0.5px 0 0 #3b82f6 inset;
    }

    .jesse-btn:hover {
        background: linear-gradient(145deg, #1e293b 70%, #0f172a 100%);
        color: #60a5fa;
        transform: translateY(-6px) scale(1.06);
    }

    .jesse-btn.icon:hover {
        box-shadow:
            0 18px 0 0 #1e293b,
            0 8px 48px 0 #0f172a,
            0 0.5px 0 0 #3b82f6 inset;
    }

    .jesse-btn.text:hover {
        box-shadow:
            0 14px 0 0 #1e293b,
            0 6px 36px 0 #0f172a,
            0 0.5px 0 0 #3b82f6 inset;
    }

    .jesse-btn.small:hover {
        box-shadow:
            0 10px 0 0 #1e293b,
            0 4px 28px 0 #0f172a,
            0 0.5px 0 0 #3b82f6 inset;
    }

    .jesse-btn.large:hover {
        box-shadow:
            0 20px 0 0 #1e293b,
            0 8px 52px 0 #0f172a,
            0 0.5px 0 0 #3b82f6 inset;
    }

    .jesse-btn-text {
        margin-left: 0.75rem;
        font-size: 1.1rem;
        font-weight: 700;
        color: #3b82f6;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        white-space: nowrap;
    }
</style>
